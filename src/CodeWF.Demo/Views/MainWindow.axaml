<u:UrsaWindow
    x:Class="CodeWF.Demo.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:CodeWF.Demo.Pages"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="using:CodeWF.Demo.ViewModels"
    Title="CodeWF.Demo"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:CompileBindings="True"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/logo.png"
    mc:Ignorable="d">
    <u:UrsaWindow.Resources>
        <Color x:Key="PrimaryColor">#2563EB</Color>
        <Color x:Key="PrimaryLightColor">#60A5FA</Color>
        <Color x:Key="SecondaryColor">#10B981</Color>
        <Color x:Key="AccentColor">#F59E0B</Color>
        <Color x:Key="NeutralColor">#1F2937</Color>
        <Color x:Key="CaptionButtonForeground">#FFFFFF</Color>

        <!-- 阴影效果资源 -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="10"
                          Color="#33000000"
                          OffsetX="0"
                          OffsetY="4"
                          Opacity="0.8" />

        <DropShadowEffect x:Key="TabShadow"
                          BlurRadius="6"
                          Color="#22000000"
                          OffsetX="0"
                          OffsetY="2"
                          Opacity="0.6" />
    </u:UrsaWindow.Resources>

    <!-- 自定义标题栏内容 -->
    <u:UrsaWindow.LeftContent>
        <Grid Height="40" Margin="3" ColumnDefinitions="Auto, Auto">
            <Image
                Width="24"
                Height="24"
                Margin="8,8,4,8"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                IsHitTestVisible="False"
                RenderOptions.BitmapInterpolationMode="HighQuality"
                Source="/Assets/logo.png" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="14"
                FontFamily="Segoe UI, Arial"
                FontWeight="Medium"
                Foreground="White"
                IsHitTestVisible="False"
                Text="CodeWF" />
        </Grid>
    </u:UrsaWindow.LeftContent>
    <u:UrsaWindow.Styles>
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Margin" Value="5 10" />
            <Setter Property="Foreground" Value="{StaticResource NeutralColor}" />
        </Style>
        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Effect" Value="{StaticResource TabShadow}" />
        </Style>
    </u:UrsaWindow.Styles>

    <!-- 主内容区域 -->
    <Border BorderThickness="0" Background="#F9FAFB">
        <Grid RowDefinitions="60, *, 10">
            <!-- 顶部渐变标题栏 -->
            <Border Grid.Row="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0% 0%" EndPoint="100% 0%">
                        <GradientStop Offset="0" Color="{StaticResource PrimaryColor}" />
                        <GradientStop Offset="1" Color="{StaticResource PrimaryLightColor}" />
                    </LinearGradientBrush>
                </Border.Background>

                <!-- 装饰性元素 -->
                <Canvas Margin="10">
                    <Ellipse Width="6" Height="6" Fill="White" Opacity="0.7">
                        <Ellipse.Styles>
                            <Style>
                                <Setter Property="Canvas.Left" Value="10" />
                                <Setter Property="Canvas.Top" Value="25" />
                                <Style.Animations>
                                    <Animation Duration="0:0:2" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="0.7" />
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.7" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Ellipse.Styles>
                    </Ellipse>
                    <Ellipse Width="4" Height="4" Fill="White" Opacity="0.5">
                        <Ellipse.Styles>
                            <Style>
                                <Setter Property="Canvas.Left" Value="25" />
                                <Setter Property="Canvas.Top" Value="20" />
                                <Style.Animations>
                                    <Animation Duration="0:0:3" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="0.5" />
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="Opacity" Value="0.2" />
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.5" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Ellipse.Styles>
                    </Ellipse>
                </Canvas>
            </Border>

            <Border
                Grid.Row="1"
                Margin="20"
                CornerRadius="12"
                Background="White"
                Effect="{StaticResource CardShadow}">


                <TabControl
                    Margin="5"
                    TabStripPlacement="Top"
                    Background="Transparent"
                    BorderThickness="0">

                    <TabItem
                        Header="Home">
                        <Border Margin="15">
                            <TextBlock Text="More features coming soon!"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="#9CA3AF" />
                        </Border>
                    </TabItem>
                    <TabItem
                        Header="StatusBadge">
                        <pages:StatusBadgeDemo Margin="15" />
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Border>
</u:UrsaWindow>