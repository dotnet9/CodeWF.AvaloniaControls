<UserControl
    x:Class="CodeWF.AvaloniaControls.Controls.StatusCard"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:codewf="https://codewf.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="12"
    mc:Ignorable="d">
    <Border
        Background="{CompiledBinding $parent[codewf:StatusCard].Kind, Converter={StaticResource StatusCardKindBackgroundConverter}}"
        CornerRadius="4">
        <Grid RowDefinitions="* *">
            <SelectableTextBlock
                Margin="8" FontSize="12"
                VerticalAlignment="Center"
                Foreground="#595959"
                Text="{CompiledBinding $parent[codewf:StatusCard].TopText}" />
            <SelectableTextBlock
                Grid.Row="1"
                Margin="8" FontSize="16"
                VerticalAlignment="Center"
                Foreground="{CompiledBinding $parent[codewf:StatusCard].Kind,
                                             Converter={StaticResource StatusCardKindForegroundConverter}}"
                Text="{CompiledBinding $parent[codewf:StatusCard].BottomText}" />
        </Grid>
    </Border>
</UserControl>