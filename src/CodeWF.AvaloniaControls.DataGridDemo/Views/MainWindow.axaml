<u:UrsaWindow
    x:Class="CodeWF.AvaloniaControls.DataGridDemo.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:CodeWF.AvaloniaControls.DataGridDemo.Views"
    xmlns:vm="clr-namespace:CodeWF.AvaloniaControls.DataGridDemo.ViewModels"
    xmlns:model="clr-namespace:CodeWF.AvaloniaControls.DataGridDemo.Models"
    xmlns:u="https://irihi.tech/ursa"
    x:DataType="vm:MainWindowViewModel" x:CompileBindings="True"
    Title="DataGrid Demo"
    Width="1000"
    Height="800" WindowStartupLocation="CenterScreen"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Icon="/Assets/logo.ico"
    mc:Ignorable="d">
    <u:UrsaWindow.Resources>
        <Color x:Key="CaptionButtonForeground">#FFFFFF</Color>
    </u:UrsaWindow.Resources>
    <u:UrsaWindow.LeftContent>
        <Grid
            Height="40"
            Margin="3"
            ColumnDefinitions="*, Auto, *">
            <Image
                Width="24"
                Height="24"
                Margin="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                IsHitTestVisible="False"
                RenderOptions.BitmapInterpolationMode="HighQuality"
                Source="/Assets/logo.png" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="White"
                IsHitTestVisible="False"
                Text="Avalonia控件Demo" />
        </Grid>
    </u:UrsaWindow.LeftContent>
    <Border BorderBrush="LightGray" BorderThickness="1">
        <Grid RowDefinitions="40 72 *">
            <Border Background="#1890FF" Grid.RowSpan="2" />
            <Border Grid.Row="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="50% 0%" EndPoint="50% 100%">
                        <GradientStop Color="#1890FF" Offset="0" />
                        <GradientStop Color="#FFFFFF" Offset="100" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Button Classes="Success" Theme="{DynamicResource OutlineButton}" 
                        Content="AddSorting" 
                        Command="{Binding RaiseAddSortingHandler}"
                        CommandParameter="{Binding #StudentDataGrid}"/>
            </StackPanel>
            <DataGrid Grid.Row="2" ItemsSource="{Binding Students}" x:Name="StudentDataGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" x:DataType="model:Student" Binding="{Binding Id}"
                                        SortMemberPath="Id" />
                    <DataGridTextColumn Header="Name" x:DataType="model:Student" Binding="{Binding Name}"
                                        SortMemberPath="Name" />
                    <DataGridTextColumn Header="Address" x:DataType="model:Student" Binding="{Binding Address}"
                                        SortMemberPath="Address" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Border>
</u:UrsaWindow>