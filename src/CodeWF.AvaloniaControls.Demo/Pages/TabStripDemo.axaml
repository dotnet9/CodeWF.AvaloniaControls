<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeWF.AvaloniaControls.Demo.Pages.TabStripDemo">
    <TabStrip Theme="{StaticResource CardTabStrip}" Background="Blue">
        <TabStrip.Styles>
            <Style Selector="TabStripItem">
                <Setter Property="CornerRadius" Value="15 15 0 0" />
                <Setter Property="Foreground" Value="#FFFFFF" />
            </Style>
        </TabStrip.Styles>
        <TabStrip.Resources>
            <LinearGradientBrush x:Key="TabItemCardHeaderSelectedBackground" StartPoint="50%, 00%" EndPoint="50%, 100%">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#BAE7FF" Offset="0" />
                    <GradientStop Color="#00FFFFFF" Offset="1"></GradientStop>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
            <SolidColorBrush x:Key="TabItemLineHeaderSelectedForeground" Color="#1890FF" />
        </TabStrip.Resources>
        <TabStripItem Content="Item1" />
        <TabStripItem Content="Item2" />
        <TabStripItem Content="Item3" />
        <TabStripItem Content="Item4" />
    </TabStrip>
</UserControl>