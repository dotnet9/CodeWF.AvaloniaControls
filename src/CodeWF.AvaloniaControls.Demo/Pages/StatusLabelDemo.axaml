<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:codewf="https://codewf.com"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeWF.AvaloniaControls.Demo.Pages.StatusLabelDemo">
    <StackPanel Margin="20" Spacing="10" HorizontalAlignment="Left">
        <codewf:StatusLabel LeftText="Server" RightText="Debug" Kind="{x:Static codewf:StatusLabelKind.Debug}"
                            HorizontalAlignment="Left" />
        <codewf:StatusLabel LeftText="Server" RightText="Info" Kind="{x:Static codewf:StatusLabelKind.Info}"
                            FontSize="16" CornerRadius="4" Padding="6 2" />
        <codewf:StatusLabel LeftText="Server" RightText="Warn" Kind="{x:Static codewf:StatusLabelKind.Warn}"
                            FontSize="24" CornerRadius="8" Padding="10 4" />
        <codewf:StatusLabel LeftText="Server" RightText="Error" Kind="{x:Static codewf:StatusLabelKind.Error}"
                            FontSize="32" CornerRadius="18" Padding="15 4" />
        <codewf:StatusLabel LeftText="Server" RightText="Fatal" Kind="{x:Static codewf:StatusLabelKind.Fatal}"
                            FontSize="32" CornerRadius="18" Padding="15 4" />
    </StackPanel>
</UserControl>